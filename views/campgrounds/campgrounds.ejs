<% include ../partials/header %>
	
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>This is the campgrounds page!</h1>
			<p>View our hand-picked campgrounds!</p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add a campground</a>
		</div>
	</header>
	<div class="row" style="display:flex; flex-wrap: wrap">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src=<%= campground.image %>>
				<div class="caption">
					<h4> <%= campground.name %> </h4>
				</div>
				<a class="btn btn-primary btn-large" href="/campgrounds/<%=campground._id %>">More info!</a>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<% include ../partials/footer %>